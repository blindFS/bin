#!/bin/bash
bumble_status=$(cat /proc/acpi/bbswitch | awk -F " " '{print $NF}')
if [ "$bumble_status" = "OFF"  ]; then
    echo "Gpu :           off"
    exit 0
fi
bumble_temp=$( optirun --no-xorg nvidia-smi -q -d TEMPERATURE | grep Gpu)
echo "$(echo $bumble_temp | sed 's/\(\S\+\) C/          +\1.0Â°C/g')"
